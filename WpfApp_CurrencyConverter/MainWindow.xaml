<Window x:Class="WpfApp_CurrencyConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_CurrencyConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="33*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <ComboBox Grid.Row="0"
                  ItemsSource="{Binding CurrencyNames}"
                  SelectedItem="{Binding OriginCurrensy, Mode=OneWayToSource}"/>
            
            <ComboBox Grid.Row="0"
                  ItemsSource="{Binding CurrencyNames}"
                  SelectedItem="{Binding CurrensyToConvert, Mode=OneWayToSource}"/>

            <TextBlock Text="{Binding OriginCurrensy}" Background="AliceBlue"/>
            <TextBlock Text="{Binding CurrensyToConvert}" Background="AliceBlue"/>
        </StackPanel>

    </Grid>
</Window>
